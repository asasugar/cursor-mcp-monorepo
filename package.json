{
  "name": "cursor-mcp-monorepo",
  "description": "A monorepo for Cursor MCP",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "debug:todo-app": "pnpm --filter ./packages/todo-app debug",
    "debug:admin-helper": "pnpm --filter ./packages/admin-helper debug",
    "build:todo-app": "pnpm --filter ./packages/todo-app build",
    "build:admin-helper": "pnpm --filter ./packages/admin-helper build"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "^0.8.2",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "zod": "^3.24.2"
  }
}