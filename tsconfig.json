{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "target": "esnext",
    "allowJs": true,
    "module": "esnext",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}