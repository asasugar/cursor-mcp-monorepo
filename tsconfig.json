{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "outDir": "./build",
    "rootDir": "./packages/todo-app/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext"
  },
  "include": ["packages/todo-app/src"],
  "exclude": ["node_modules", "dist"]
}
